#!/usr/bin/env python3
import sys
import os

# O 'r' antes das aspas resolve o SyntaxWarning da logo ASCII
print(r"""
 / ____|         | |    |__ \         | |
| |        __ _  | |__     ) |  _ __  | | __
| |       / _` | | '_ \   / /  | '_ \ | |/ /
| |____  | (_| | | |_) | / /_  | |_) | |   < 
 \_____|  \__,_| |_.__/ |____| | .__/  |_|\_\
                               | |           
                               |_|           
      Code2pkg (C2P) - SDK by MurilooPr
""")

def main():
    if len(sys.argv) < 2:
        print("Uso: ./c2p build <arquivo.c>")
        return

    command = sys.argv[1]
    if command == "build":
        source_file = sys.argv[2]
        # Aqui ele chama o make passando o arquivo digitado
        os.system(f"make SOURCE={source_file}")

if __name__ == "__main__":
    main()
